{
  "name": "flint",
  "displayName": "Flint",
  "description": "Support for the Flint programming language",
  "version": "0.1.1",
  "publisher": "Flint-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/flint-language/vscode-flint"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "flint",
        "aliases": [
          "Flint",
          "flint"
        ],
        "extensions": [
          ".flint"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/amber-logo.png",
          "dark": "./images/amber-logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "flint",
        "scopeName": "source.flint",
        "path": "./syntaxes/flint.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "flint",
        "path": "./snippets.json"
      }
    ]
  },
  "configuration": {
    "title": "Flint",
    "properties": {
      "flint.path": {
        "type": "string",
        "default": null,
        "description": "A path to the flint executable. By default, the extension looks for gleam in the PATH, but if set, will use the path specified instead.",
        "scope": "machine"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "compile-watch": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "vscode:package": "vsce package"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vscode/vsce": "^2.29.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^10.1.0",
    "prettier": "^3.0.1",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}